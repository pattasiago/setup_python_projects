{
    "python.formatting.provider": "black",
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.linting.enabled": true,
    "python.linting.prospectorEnabled": true,
    "python.linting.prospectorArgs": [
        "--profile=.prospector.yaml"
    ]
}